<simulation verbosity='medium'>
  <output prefix='nvt'>
    <properties stride='20' filename='out'>  [ step, time{picosecond}, conserved{electronvolt}, temperature{kelvin}, kinetic_cv{electronvolt}, potential{electronvolt}, ensemble_bias{electronvolt}] </properties>
    <trajectory filename='pos' stride='20' cell_units='angstrom'> positions{angstrom} </trajectory>  
    <trajectory filename='for' stride='20'> forces </trajectory>
    <checkpoint stride='500'/>
  </output>
  <total_time>10</total_time> 
  <total_steps>1000000</total_steps>
  <prng>
    <seed>31415</seed>
  </prng>
  <ffsocket name='mace00' mode='inet' matching="any">
        <address>localhost</address> <latency> 2e-4 </latency>
        <port>22251</port>
  </ffsocket>
  <ffplumed name="plumed">
         <file mode="xyz">./init.xyz</file>
         <plumeddat> plumed_data/plumed.dat </plumeddat>
  </ffplumed>
  <system>
    <initialize nbeads='1'>
      <file mode='xyz'> init.xyz </file>
      <velocities mode='thermal' units='kelvin'> 330 </velocities>
      <cell mode='abc' units='angstrom'> [12.42,12.42,12.42] </cell>
    </initialize>
    <forces>
      <force forcefield='mace00'> </force>
    </forces> 
 <motion mode="dynamics">                                                                                                                                                                            
      <dynamics mode="nvt">                                                                                                                                                                             
        <thermostat mode='svr'>                                                                                                                                                                         
          <tau units='femtosecond'> 100 </tau>                                                                                                                                                          
        </thermostat>                                                                                                                                                                                   
        <timestep units="femtosecond"> 1.00 </timestep>                                                                                                                                                 
      </dynamics>                                                                                                                                                                                       
    </motion>                                                                                                                                                                                           
    <ensemble>                                                                                                                                                                                          
      <temperature units="kelvin"> 330 </temperature>                                                                                                                                                   
       <bias>
           <force forcefield="plumed" nbeads="1">
           </force>
       </bias>
    </ensemble>                                                                                                                                                                                         
  </system>  
 <smotion mode="metad">                                                                                                
      <metad> <metaff> [ plumed ] </metaff>  </metad>                                    
 </smotion> 
</simulation>
