&GLOBAL
   PRINT_LEVEL LOW
   PROJECT_NAME water
   RUN_TYPE MD
   WALLTIME 600
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &DFT
    CHARGE 0
    BASIS_SET_FILE_NAME GTH_BASIS_SETS 
    BASIS_SET_FILE_NAME BASIS_MOLOPT 
    POTENTIAL_FILE_NAME POTENTIAL 


    &QS
      METHOD GPW
      #EPS_DEFAULT 1.0E-12
      #EPS_PGF_ORB 1.0E-14
    &END QS

    &MGRID
      CUTOFF 400
      REL_CUTOFF 60
      NGRIDS 5
    &END MGRID

    &SCF
      # needs a pre-converged wfn as input
      SCF_GUESS RESTART
      MAX_SCF 20
      EPS_SCF 5.0E-7
      #ADDED_MOS 20
      #&SMEAR ON
      #  METHOD FERMI_DIRAC
      #  ELECTRONIC_TEMPERATURE [K] 300
      #&END SMEAR
      #&DIAGONALIZATION
      #  ALGORITHM STANDARD
      #&END DIAGONALIZATION
      #&MIXING
      #  METHOD BROYDEN_MIXING
      #  ALPHA   0.4
      #  BETA    0.5
      #  NBROYDEN  8
      #&END
      &OT  T
         ALGORITHM  IRAC
         MINIMIZER  DIIS
      &END OT
      #&OT
      #  MINIMIZER DIIS
      #  PRECONDITIONER FULL_ALL
      #&END OT
      &OUTER_SCF
        MAX_SCF 20
        EPS_SCF 5.0E-7
      &END OUTER_SCF
      #&PRINT
      #  &RESTART
      #    ADD_LAST NUMERIC
      #    &EACH
      #      QS_SCF 0
      #    &END EACH
      #  &END RESTART
      #&END PRINT
    &END SCF

    &XC # revPBE
      &XC_FUNCTIONAL
        &PBE 
          PARAMETRIZATION REVPBE
        &END
      &END XC_FUNCTIONAL
      #&XC_GRID
      #  XC_DERIV SPLINE2_SMOOTH
      #&END XC_GRID
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          R_CUTOFF 15
          LONG_RANGE_CORRECTION TRUE
          REFERENCE_FUNCTIONAL revPBE
          PARAMETER_FILE_NAME dftd3.dat
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC

  &PERIODIC_EFIELD
       INTENSITY 0.000
       POLARISATION 0.0 0.0 1.0
  &END PERIODIC_EFIELD

     &PRINT                                                                                                             
     ! &V_HARTREE_CUBE ON                                                                                               
     !   LOG_PRINT_KEY T                                                                                                
     ! &END V_HARTREE_CUBE                                                                                              
     ! &EFIELD_CUBE ON                                                                                                  
     !   LOG_PRINT_KEY T                                                                                                
     ! &END EFIELD_CUBE                                                                                                 
      &MOMENTS                                                                                                          
        PERIODIC TRUE                                                                                                   
      &END MOMENTS                                                                                                      
     &END PRINT 

  &END DFT
  &SUBSYS
  &CELL
     ABC 12.42 12.42 12.42
      PERIODIC XYZ
  &END
  &TOPOLOGY 
     COORD_FILE_FORMAT XYZ
     COORD_FILE_NAME init.xyz 
 &END
     &KIND O
        BASIS_SET TZV2P-GTH-q6
        POTENTIAL GTH-PBE-q6
     &END KIND
     &KIND H
      MASS 2.0
        BASIS_SET TZV2P-GTH-q1
        POTENTIAL GTH-PBE-q1
     &END KIND

  &END SUBSYS
&END
&MOTION
	&MD
	   ENSEMBLE NVT
	   TEMPERATURE [K] 330
	   TIMESTEP [fs] 1.0
           STEPS 120000
	   &THERMOSTAT
	    TYPE CSVR
	     &CSVR
	       TIMECON 50
	     &END
	   &END THERMOSTAT
           &PRINT
             FORCE_LAST T
             &ENERGY SILENT
               &EACH
                 MD 1
               &END EACH
             &END ENERGY
           &END PRINT
	&END MD

	&PRINT
	   &TRAJECTORY
	      &EACH
	          MD 2
	      &END EACH
	   &END TRAJECTORY
	   &RESTART
	      &EACH
	         MD 1
              &END EACH
           &END RESTART
        &END PRINT
&END MOTION
